//ヘッダービュー
%header
  .top-box
    .top-box__logo
      = image_tag "logo.png", class: "logo", :size =>'150x50'
    .top-box__Form-box
      = form_with model: @restaurant, class: "Form", local: true do |f|
        = f.text_field 'キーワード', class: 'Form__inputText', placeholder: 'type a message'
        = f.submit 'Send', class: 'Form__submit'
  .bottom-box
    .bottom-box__category
      カテゴリ
    .bottom-box__brand
      ブランド
    .bottom-box__login
      ログイン
    .bottom-box__registration
      登録
